{
    "manifest_version": 2,
    "name": "Container Manager",
    "version": "1.0",

    "description": "Firefox's missing container management solution.",
    "icons": {
        "48": "container-48.png",
        "32": "container-32.png"
    },

    "sidebar_action": {   
        "default_icon": {
            "32": "container-32.png"
        },  
        "default_title": "Container Manager", 
        "default_panel": "sidebar.html" 
    },

    "permissions": [
        "contextualIdentities",
        "tabs"
    ]
}